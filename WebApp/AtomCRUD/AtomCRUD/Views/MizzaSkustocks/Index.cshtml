@model IEnumerable<AtomCRUD.Models.MizzaSkustock>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StockCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sku)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sku.MizzaSkuid)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Skuid" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Skuid" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Skuid" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
