@model IEnumerable<PlacementManagement.Web.ViewModels.StudentSkillViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Your Skills</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-sm">
        <i class="fa fa-plus" aria-hidden="true"></i>
        Add New Skill
    </a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SkillName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProjectsDone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SkillName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectsDone)
        </td>
        <td>
            <a href=@Url.Action("Edit", new { skillId = item.SkillId })
               class="btn btn-info btn-sm">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
            </a>
            <a href=@Url.Action("Delete", new { skillId = item.SkillId })
               class="btn btn-danger btn-sm">
                <i class="fa fa-trash-o" aria-hidden="true"></i> Delete
            </a>
        </td>
    </tr>
}

</table>
