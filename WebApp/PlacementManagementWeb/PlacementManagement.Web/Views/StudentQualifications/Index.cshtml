@model PlacementManagement.Web.ViewModels.StudentDetailViewModel

@{
    ViewBag.Title = "Manage Student Qualifications";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    int? StudentId = null;
    if (Model != null)
    {
        StudentId = Model.Student.StudentId;
    }
}

@Html.Partial("_StudentSearchPartial", new ViewDataDictionary
{
    { "Title", ViewBag.Title },
    { "ActionUrl", "/StudentQualifications" },
    { "StudentId", StudentId },
    { "ErrorMessage", ViewBag.ErrorMessage }
})

@if (Model != null)
{

    <div class="row px-3">
        <div class="col-md-3 col-sm-6">
            <strong>Student Name</strong>
            <div class="text-muted">@Model.Student.FirstName @Model.Student.LastName</div>
        </div>
        <div class="col-md-3 col-sm-6">
            <strong>Email</strong>
            <div class="text-muted">@Model.Student.Email</div>
        </div>
        <div class="col-md-3 col-sm-6">
            <strong>Phone Number</strong>
            <div class="text-muted">@Model.Student.PhoneNumber</div>
        </div>
        <div class="col-md-3 col-sm-6">
            <strong>Registration Date</strong>
            <div class="text-muted">@Model.Student.RegistrationDate</div>
        </div>
    </div>

    <p>
        @Html.ActionLink("Add Qualification", "Create", new { studentId = StudentId }, new { @class = "btn btn-success btn-sm float float-right mb-3" })
    </p>

    <table class="table table-striped">
        <tr>
            <th>
                Qualification Type Id
            </th>
            <th>
                Percentage Scored
            </th>
            <th>
                Passing Year
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.StudentQualifications)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QualificationTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Percentage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassingYear)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { studentId = item.StudentId, qualificationTypeId = item.QualificationTypeId }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Delete", "Delete", new { studentId = item.StudentId, qualificationTypeId = item.QualificationTypeId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
}
