@using PlacementManagement.Web.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="row min-vh-100 d-flex justify-content-center align-items-center" style="background-color: #f7f7f7">
    <div class="col-md-8 d-flex flex-column align-items-center">
        <h2 class="text-center mb-3">PMS</h2>
        <h4 class="mb-5 text-muted">Placement Management System</h4>
        <section id="loginForm" class="card shadow p-4" style="width: fit-content">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { style = "width: fit-content; min-width: 400px", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Use your login credentials</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "control-label ml-3" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label ml-3" })
                    <div class="col-md-12">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="ml-3">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-primary" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}