@model IEnumerable<PlacementManagement.Web.ViewModels.StudentDetailViewModel>
@{
    ViewBag.Title = "Students";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table table-responsive-md table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentId)
        </th>
        <th>
            Full name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.RegistrationDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Student.StudentId.ToString(), "Details", new { studentId = item.Student.StudentId })
            </td>
            <td>
                @Html.DisplayName(item.Student.FirstName) @item.Student.LastName

            </td>
            <td>
                @item.Student.Email
            </td>
            <td>
                @Html.DisplayFor(model => item.Student.Gender)
            </td>
            <td>
                +91 @Html.DisplayName(item.Student.PhoneNumber)
            </td>
            <td>
                @Html.DisplayName(item.Student.RegistrationDate.ToString())
            </td>
        </tr>
    }

</table>

<div class="d-flex justify-content-end">

    @if (ViewBag.PrevPage != null)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.PrevPage })" class="btn btn-secondary btn-sm">
            <i class="fa fa-angle-left" aria-hidden="true"></i> Previous
        </a>
    }

    @if (ViewBag.NextPage != null)
    {
        <a href="@Url.Action("Index", new { page = ViewBag.NextPage })" class="btn btn-primary btn-sm ml-2">
            Next <i class="fa fa-angle-right" aria-hidden="true"></i>
        </a>
    }
</div>
